<form method="post" action="~/Home/NonlinearProgramming">
    <center><h3>Прямые методы численного решения задач нелинейного программирования</h3></center>
    <br />
    <div class="main">
        <label>F(x) = </label>
        <input style="width: 250px" type="text" value="2*x1^2+x2^2-4x2-3x3" readonly="readonly" />
        <br /><br />
        <label>Нелинейные ограничения</label><br />

        <input style="width: 200px" type="text" value="2*x1+x2-x3" readonly="readonly" />

        <select name="signFirst" id="seltagFirst" onchange="localStorage.seltagFirst=this.selectedIndex">
            <option value="0">≤</option>
            <option value="1">≥</option>
        </select>
        <input style="width: 50px" type="text" value="@ViewBag.firstRestriction" name="firstRestriction" />
        <br />

        <input style="width: 200px" type="text" value="4*x1-x2+3x3" readonly="readonly" />

        <select name="signTwo" id="seltagTwo" onchange="localStorage.seltagTwo=this.selectedIndex">
            <option value="0">≤</option>
            <option value="1">≥</option>
        </select>
        <input style="width: 50px" type="text" value="@ViewBag.twoRestriction" name="twoRestriction" />
        <br />

        <input style="width: 200px" type="text" value="x2" readonly="readonly" />

        <select name="signThree" id="seltagThree" onchange="localStorage.seltagThree=this.selectedIndex">
            <option value="1">≥</option>
            <option value="0">≤</option>
        </select>
        <input style="width: 50px" type="text" value="@ViewBag.threeRestriction" name="threeRestriction" />
        <br />

        @*<label>Начальная точка</label>

        <label style="font-size: 30px; padding: 0px 5px 0px 0px;">( </label> <input class="input-point" type="text" name="pointOne" value="@ViewBag.pointOne" /><label style="font-size: 30px; padding: 0px 0px 0px 5px; "> ; </label>
        <input class="input-point" type="text" name="pointTwo" value="@ViewBag.pointTwo" /><label style="font-size: 30px; padding: 0px 0px 0px 5px;"> )</label>*@
        @*<br />*@
